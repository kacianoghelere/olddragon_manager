<p id="notice"><%= notice %></p>

<h1>Listing Character Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Age</th>
      <th>Description</th>
      <th>Character class</th>
      <th>Character race</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_sheets.each do |character_sheet| %>
      <tr>
        <td><%= character_sheet.name %></td>
        <td><%= character_sheet.weight %></td>
        <td><%= character_sheet.height %></td>
        <td><%= character_sheet.age %></td>
        <td><%= character_sheet.description %></td>
        <td><%= character_sheet.character_class %></td>
        <td><%= character_sheet.character_race %></td>
        <td><%= character_sheet.user %></td>
        <td><%= link_to 'Show', character_sheet %></td>
        <td><%= link_to 'Edit', edit_character_sheet_path(character_sheet) %></td>
        <td><%= link_to 'Destroy', character_sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

