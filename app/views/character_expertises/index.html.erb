<p id="notice"><%= notice %></p>

<h1>Listing Character Expertises</h1>

<table>
  <thead>
    <tr>
      <th>Character sheet</th>
      <th>Expertise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_expertises.each do |character_expertise| %>
      <tr>
        <td><%= character_expertise.character_sheet %></td>
        <td><%= character_expertise.expertise %></td>
        <td><%= link_to 'Show', character_expertise %></td>
        <td><%= link_to 'Edit', edit_character_expertise_path(character_expertise) %></td>
        <td><%= link_to 'Destroy', character_expertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

