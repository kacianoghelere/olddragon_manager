<p id="notice"><%= notice %></p>

<h1>Listing Dexterity Mods</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Attack mod</th>
      <th>Surprise mod</th>
      <th>Armor class mod</th>
      <th>Protection mod</th>
      <th>Find traps mod</th>
      <th>Silent movement mod</th>
      <th>Lockpick mod</th>
      <th>Stealth mod</th>
      <th>Pickpocket mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dexterity_mods.each do |dexterity_mod| %>
      <tr>
        <td><%= dexterity_mod.value %></td>
        <td><%= dexterity_mod.attack_mod %></td>
        <td><%= dexterity_mod.surprise_mod %></td>
        <td><%= dexterity_mod.armor_class_mod %></td>
        <td><%= dexterity_mod.protection_mod %></td>
        <td><%= dexterity_mod.find_traps_mod %></td>
        <td><%= dexterity_mod.silent_movement_mod %></td>
        <td><%= dexterity_mod.lockpick_mod %></td>
        <td><%= dexterity_mod.stealth_mod %></td>
        <td><%= dexterity_mod.pickpocket_mod %></td>
        <td><%= link_to 'Show', dexterity_mod %></td>
        <td><%= link_to 'Edit', edit_dexterity_mod_path(dexterity_mod) %></td>
        <td><%= link_to 'Destroy', dexterity_mod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

