<p id="notice"><%= notice %></p>

<h1>Listing Character Race Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Character race</th>
      <th>Weapon type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_race_weapons.each do |character_race_weapon| %>
      <tr>
        <td><%= character_race_weapon.character_race %></td>
        <td><%= character_race_weapon.weapon_type %></td>
        <td><%= link_to 'Show', character_race_weapon %></td>
        <td><%= link_to 'Edit', edit_character_race_weapon_path(character_race_weapon) %></td>
        <td><%= link_to 'Destroy', character_race_weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

