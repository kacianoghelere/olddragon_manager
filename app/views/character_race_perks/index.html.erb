<p id="notice"><%= notice %></p>

<h1>Listing Character Race Perks</h1>

<table>
  <thead>
    <tr>
      <th>Character race</th>
      <th>Perk</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_race_perks.each do |character_race_perk| %>
      <tr>
        <td><%= character_race_perk.character_race %></td>
        <td><%= character_race_perk.perk %></td>
        <td><%= link_to 'Show', character_race_perk %></td>
        <td><%= link_to 'Edit', edit_character_race_perk_path(character_race_perk) %></td>
        <td><%= link_to 'Destroy', character_race_perk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

