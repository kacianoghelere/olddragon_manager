<p id="notice"><%= notice %></p>

<h1>Listing Armors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Armor class</th>
      <th>Movement reduction</th>
      <th>Price</th>
      <th>Alignment</th>
      <th>Armor type</th>
      <th>Origin</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @armors.each do |armor| %>
      <tr>
        <td><%= armor.name %></td>
        <td><%= armor.description %></td>
        <td><%= armor.armor_class %></td>
        <td><%= armor.movement_reduction %></td>
        <td><%= armor.price %></td>
        <td><%= armor.alignment %></td>
        <td><%= armor.armor_type %></td>
        <td><%= armor.origin %></td>
        <td><%= armor.user %></td>
        <td><%= link_to 'Show', armor %></td>
        <td><%= link_to 'Edit', edit_armor_path(armor) %></td>
        <td><%= link_to 'Destroy', armor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

