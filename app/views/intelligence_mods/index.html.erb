<p id="notice"><%= notice %></p>

<h1>Listing Intelligence Mods</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Languages mod</th>
      <th>Learn magic mod</th>
      <th>Magic circle 1 mod</th>
      <th>Magic circle 2 mod</th>
      <th>Magic circle 3 mod</th>
      <th>Magic circle 4 mod</th>
      <th>Magic circle 5 mod</th>
      <th>Magic circle 6 mod</th>
      <th>Magic circle 7 mod</th>
      <th>Magic circle 8 mod</th>
      <th>Magic circle 9 mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intelligence_mods.each do |intelligence_mod| %>
      <tr>
        <td><%= intelligence_mod.value %></td>
        <td><%= intelligence_mod.languages_mod %></td>
        <td><%= intelligence_mod.learn_magic_mod %></td>
        <td><%= intelligence_mod.magic_circle_1_mod %></td>
        <td><%= intelligence_mod.magic_circle_2_mod %></td>
        <td><%= intelligence_mod.magic_circle_3_mod %></td>
        <td><%= intelligence_mod.magic_circle_4_mod %></td>
        <td><%= intelligence_mod.magic_circle_5_mod %></td>
        <td><%= intelligence_mod.magic_circle_6_mod %></td>
        <td><%= intelligence_mod.magic_circle_7_mod %></td>
        <td><%= intelligence_mod.magic_circle_8_mod %></td>
        <td><%= intelligence_mod.magic_circle_9_mod %></td>
        <td><%= link_to 'Show', intelligence_mod %></td>
        <td><%= link_to 'Edit', edit_intelligence_mod_path(intelligence_mod) %></td>
        <td><%= link_to 'Destroy', intelligence_mod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

