<p id="notice"><%= notice %></p>

<h1>Listing Effects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Effect type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @effects.each do |effect| %>
      <tr>
        <td><%= effect.name %></td>
        <td><%= effect.description %></td>
        <td><%= effect.effect_type %></td>
        <td><%= effect.user %></td>
        <td><%= link_to 'Show', effect %></td>
        <td><%= link_to 'Edit', edit_effect_path(effect) %></td>
        <td><%= link_to 'Destroy', effect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

