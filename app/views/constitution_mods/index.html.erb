<p id="notice"><%= notice %></p>

<h1>Listing Constitution Mods</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Hitpoints mod</th>
      <th>Protection mod</th>
      <th>Resurrection mod</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constitution_mods.each do |constitution_mod| %>
      <tr>
        <td><%= constitution_mod.value %></td>
        <td><%= constitution_mod.hitpoints_mod %></td>
        <td><%= constitution_mod.protection_mod %></td>
        <td><%= constitution_mod.resurrection_mod %></td>
        <td><%= link_to 'Show', constitution_mod %></td>
        <td><%= link_to 'Edit', edit_constitution_mod_path(constitution_mod) %></td>
        <td><%= link_to 'Destroy', constitution_mod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

