<p id="notice"><%= notice %></p>

<h1>Listing Character Sheet Attributes</h1>

<table>
  <thead>
    <tr>
      <th>Strength</th>
      <th>Dexterity</th>
      <th>Constitution</th>
      <th>Intelligence</th>
      <th>Wisdom</th>
      <th>Charisma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_sheet_attributes.each do |character_sheet_attribute| %>
      <tr>
        <td><%= character_sheet_attribute.strength %></td>
        <td><%= character_sheet_attribute.dexterity %></td>
        <td><%= character_sheet_attribute.constitution %></td>
        <td><%= character_sheet_attribute.intelligence %></td>
        <td><%= character_sheet_attribute.wisdom %></td>
        <td><%= character_sheet_attribute.charisma %></td>
        <td><%= link_to 'Show', character_sheet_attribute %></td>
        <td><%= link_to 'Edit', edit_character_sheet_attribute_path(character_sheet_attribute) %></td>
        <td><%= link_to 'Destroy', character_sheet_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

