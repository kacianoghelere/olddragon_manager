<h1>Listing Character Race Languages</h1>

<table>
  <thead>
    <tr>
      <th>Character race</th>
      <th>Language type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_race_languages.each do |character_race_language| %>
      <tr>
        <td><%= character_race_language.character_race %></td>
        <td><%= character_race_language.language_type %></td>
        <td><%= link_to 'Show', character_race_language %></td>
        <td><%= link_to 'Edit', edit_character_race_language_path(character_race_language) %></td>
        <td><%= link_to 'Destroy', character_race_language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

