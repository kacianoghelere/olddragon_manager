<p id="notice"><%= notice %></p>

<h1>Listing Character Race Armors</h1>

<table>
  <thead>
    <tr>
      <th>Armor type</th>
      <th>Character race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_race_armors.each do |character_race_armor| %>
      <tr>
        <td><%= character_race_armor.armor_type %></td>
        <td><%= character_race_armor.character_race %></td>
        <td><%= link_to 'Show', character_race_armor %></td>
        <td><%= link_to 'Edit', edit_character_race_armor_path(character_race_armor) %></td>
        <td><%= link_to 'Destroy', character_race_armor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

