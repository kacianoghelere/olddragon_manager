<p id="notice"><%= notice %></p>

<h1>Listing Dices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dices.each do |dice| %>
      <tr>
        <td><%= dice.name %></td>
        <td><%= link_to 'Show', dice %></td>
        <td><%= link_to 'Edit', edit_dice_path(dice) %></td>
        <td><%= link_to 'Destroy', dice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dice', new_dice_path %>
