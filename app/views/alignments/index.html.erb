<p id="notice"><%= notice %></p>

<h1>Listing Alignments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alignments.each do |alignment| %>
      <tr>
        <td><%= alignment.name %></td>
        <td><%= link_to 'Show', alignment %></td>
        <td><%= link_to 'Edit', edit_alignment_path(alignment) %></td>
        <td><%= link_to 'Destroy', alignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alignment', new_alignment_path %>
