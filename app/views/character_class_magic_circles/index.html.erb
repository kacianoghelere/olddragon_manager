        <td><%= character_class_magic_circle.magic_circle_6 %></td>
        <td><%= character_class_magic_circle.magic_circle_7 %></td>
        <td><%= character_class_magic_circle.magic_circle_8 %></td>
        <td><%= character_class_magic_circle.magic_circle_9 %></td>
        <td><%= character_class_magic_circle.character_class %></td>
        <td><%= link_to 'Show', character_class_magic_circle %></td>
        <td><%= link_to 'Edit', edit_character_class_magic_circle_path(character_class_magic_circle) %></td>
        <td><%= link_to 'Destroy', character_class_magic_circle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
